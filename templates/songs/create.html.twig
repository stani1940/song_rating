{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5 offset-md-3">Add new song</h3>
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.band) }}
                    {{ form_widget(form.band,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.song_name) }}
                    {{ form_widget(form.song_name,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}